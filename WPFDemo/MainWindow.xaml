<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="WPFDemo"  Loaded="Window_Loaded" x:Name="mainWindow"
        Height="{Binding ElementName=mainWindow,Mode=OneWay, Path=ActualWidth}"
        Background="AliceBlue">
    <WrapPanel >
        <!--<Button DockPanel.Dock="Top" Height="50">Top</Button>-->
        <!--<Button DockPanel.Dock="Bottom" Height="50">Buttom</Button>-->
        <Button  Width="50" Click="Button_Click" Visibility="Collapsed">Left</Button>
        <!--<Button DockPanel.Dock="Right" Width="50">Right</Button>-->
        <CheckBox x:Name="cb1"/>

        <Button x:Name="bt1"  Height="50" Click="Button_Click">
                <StackPanel Orientation="Horizontal">
                    <Label>Label</Label>
                    <CheckBox>Check box</CheckBox>
                    <TextBox Width="100"/>
                    <ListBox />
                </StackPanel>
            </Button>

        <WebBrowser/>
        <TreeView/>
    </WrapPanel>
</Window>
